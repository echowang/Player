<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_video"/>

    <TextView
        android:id="@+id/play_video_name"
        style="@style/video_info_text"
        android:text="@string/play_video_name"
        app:layout_constraintTop_toBottomOf="@id/icon_video"
        app:layout_constraintStart_toStartOf="@id/icon_video" />

    <TextView
        android:id="@+id/text_video_name"
        style="@style/video_info_value"
        android:text="@string/play_video_name"
        android:ellipsize="marquee"
        app:layout_constraintTop_toTopOf="@id/play_video_name"
        app:layout_constraintStart_toEndOf="@id/play_video_name"/>

    <TextView
        android:id="@+id/play_video_time"
        style="@style/video_info_text"
        android:text="@string/play_video_time"
        app:layout_constraintTop_toBottomOf="@id/play_video_name"
        app:layout_constraintStart_toStartOf="@id/play_video_name"/>

    <TextView
        android:id="@+id/text_video_time"
        style="@style/video_info_value"
        android:text="@string/play_video_time"
        app:layout_constraintTop_toTopOf="@id/play_video_time"
        app:layout_constraintStart_toEndOf="@id/play_video_time"/>

    <TextView
        android:id="@+id/play_video_resolution"
        style="@style/video_info_text"
        android:text="@string/play_video_resolution"
        app:layout_constraintTop_toBottomOf="@id/play_video_time"
        app:layout_constraintStart_toStartOf="@id/play_video_time"/>

    <TextView
        android:id="@+id/text_video_resolution"
        style="@style/video_info_value"
        android:text="@string/play_video_resolution"
        app:layout_constraintTop_toTopOf="@id/play_video_resolution"
        app:layout_constraintStart_toEndOf="@id/play_video_resolution"/>

    <TextView
        android:id="@+id/play_video_size"
        style="@style/video_info_text"
        android:text="@string/play_video_size"
        app:layout_constraintTop_toBottomOf="@id/play_video_resolution"
        app:layout_constraintStart_toStartOf="@id/play_video_resolution"/>

    <TextView
        android:id="@+id/text_video_size"
        style="@style/video_info_value"
        android:text="@string/play_video_size"
        app:layout_constraintTop_toTopOf="@id/play_video_size"
        app:layout_constraintStart_toEndOf="@id/play_video_size"/>

</android.support.constraint.ConstraintLayout>